<script>$('#myModal').on('shown.bs.modal', function () {
  $('#myInput').trigger('focus')
})
</script>
<%= form_for @cook , url: {action: :create} do |f| %>
<%= f.label :title, 'ケーキ名' %>
<p><%= f.text_field :title %></p>
<%= f.label :post, '作り方' %>
<p><%= f.text_area :post, :size=>"20*10" %></p>
<%= f.label :file, '作成画像' %>
<p><%= f.file_field :file %></p>
<%= f.label :phrase, 'キャッチフレーズ' %>
<p><%= f.text_area :phrase, :size=>"10*20" %></p>
<%= f.label :arrange, '工夫したポイント' %>
<p><%= f.text_area :arrange, :size=>"20*20" %></p>
<!-- Button trigger modal -->
<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
  Launch demo modal
</button>

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        ...
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button>
      </div>
    </div>
  </div>
</div>
<p><%= f.submit '投稿' %></p>
 <% end %>